{
  "manifest_version": 3,
  "name": "Product NPS Score",
  "version": "1.6",
  "description": "Shows NPS-like score for Decathlon, Uniqlo, IKEA, and dm.de products",
  "permissions": ["webNavigation", "scripting"],
  "host_permissions": [
    "*://*.decathlon.de/*",
    "*://*.decathlon.co.uk/*",
    "*://*.uniqlo.com/*",
    "*://*.ikea.com/*",
    "*://*.dm.de/*",
    "*://apps.bazaarvoice.com/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["*://*.decathlon.de/p/*", "*://*.decathlon.co.uk/p/*"],
      "js": ["content-script.js"],
      "run_at": "document_end"
    },
    {
      "matches": ["*://*.decathlon.de/*", "*://*.decathlon.co.uk/*"],
      "js": ["content-script-plp.js"],
      "run_at": "document_end"
    },
    {
      "matches": ["*://*.uniqlo.com/*/products/*"],
      "js": ["uniqlo-pdp.js"],
      "run_at": "document_end"
    },
    {
      "matches": ["*://*.uniqlo.com/*"],
      "js": ["uniqlo-plp.js"],
      "run_at": "document_end"
    },
    {
      "matches": ["*://*.ikea.com/*/p/*"],
      "js": ["ikea-pdp.js"],
      "run_at": "document_end"
    },
    {
      "matches": ["*://*.ikea.com/*"],
      "js": ["ikea-plp.js"],
      "run_at": "document_end"
    },
    {
      "matches": ["*://*.dm.de/*"],
      "js": ["dm-shared.js", "dm-pdp.js", "dm-plp.js"],
      "run_at": "document_end"
    }
  ]
}
